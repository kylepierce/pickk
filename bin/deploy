#!/bin/bash

set -eux

DIRNAME=$(cd `dirname $0` && pwd)
ENV=${1:-}
if [ -z $ENV ]; then
  ENV="dev"
else
  shift
fi

echo $ENV

$DIRNAME/merge-settings $ENV > /tmp/$ENV.json


DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy https://www.pickk.net --settings settings.json
# DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy www.pickk.net --settings /tmp/$ENV.json "$@"
